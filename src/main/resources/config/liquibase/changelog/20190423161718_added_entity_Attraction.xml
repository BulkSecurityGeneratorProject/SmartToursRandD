    <!--
        Added the entity Attraction.
    -->
    <changeSet id="20190423161718-1" author="jhipster">
        <createTable tableName="attraction">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sygic_travel_id" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="rating" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="latitude" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="longitude" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="marker" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="perex" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="thumbnail_url" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="categories" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="ds_summary" type="clob">
                <constraints nullable="true"/>
            </column>

            <column name="ds_icon" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="ds_apparent_temperature_high" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_apparent_temperature_low" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_dew_point" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_humidity" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_pressure" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_wind_speed" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_wind_gust" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_cloud_cover" type="double">
                <constraints nullable="true"/>
            </column>

            <column name="ds_visibility" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="adult_price" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="child_price" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="jhi_accessible" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="facilities" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="open_time" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="close_time" type="datetime">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="attraction" columnName="open_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="attraction" columnName="close_time" columnDataType="datetime"/>
        
        <createTable tableName="attraction_group_types">
            <column name="group_types_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="attractions_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="attractions_id, group_types_id" tableName="attraction_group_types"/>
        
        <createTable tableName="attraction_event_types">
            <column name="event_types_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="attractions_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="attractions_id, event_types_id" tableName="attraction_event_types"/>
        
    </changeSet>
